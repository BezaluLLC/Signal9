{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build-solution",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"--configuration",
				"Release"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			],
			"isBackground": false
		},
		{
			"label": "build-debug",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"--configuration",
				"Debug"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			],
			"isBackground": false
		},
		{
			"label": "restore",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"restore"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			],
			"isBackground": false
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"clean"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			],
			"isBackground": false
		},
		{
			"label": "run-hub",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"src/Signal9.Hub"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			],
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated"
			}
		},
		{
			"label": "run-agent",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"src/Signal9.Agent"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			],
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated"
			}
		},
		{
			"label": "run-webportal",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"src/Signal9.WebPortal"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			],
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated"
			}
		},
		{
			"label": "run-functions",
			"type": "shell",
			"command": "func",
			"args": [
				"start"
			],
			"options": {
				"cwd": "${workspaceFolder}/src/Signal9.Functions"
			},
			"group": "build",
			"problemMatcher": [],
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated"
			}
		},
		{
			"label": "docker-build-hub",
			"type": "shell",
			"command": "docker",
			"args": [
				"build",
				"-f",
				"src/Signal9.Hub/Dockerfile",
				"-t",
				"signal9-hub",
				"."
			],
			"group": "build",
			"problemMatcher": [],
			"isBackground": false
		},
		{
			"label": "docker-build-webportal",
			"type": "shell",
			"command": "docker",
			"args": [
				"build",
				"-f",
				"src/Signal9.WebPortal/Dockerfile",
				"-t",
				"signal9-webportal",
				"."
			],
			"group": "build",
			"problemMatcher": [],
			"isBackground": false
		},
		{
			"label": "test-all",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test",
				"--configuration",
				"Release",
				"--logger",
				"trx",
				"--collect:\"XPlat Code Coverage\""
			],
			"group": "test",
			"problemMatcher": [
				"$msCompile"
			],
			"isBackground": false
		},
		{
			"label": "azure-deploy",
			"type": "shell",
			"command": "azd",
			"args": [
				"up"
			],
			"group": "build",
			"problemMatcher": [],
			"isBackground": false
		},
		{
			"label": "azure-provision",
			"type": "shell",
			"command": "azd",
			"args": [
				"provision"
			],
			"group": "build",
			"problemMatcher": [],
			"isBackground": false
		},
		{
			"label": "azure-deploy-code",
			"type": "shell",
			"command": "azd",
			"args": [
				"deploy"
			],
			"group": "build",
			"problemMatcher": [],
			"isBackground": false
		}
	]
}